<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_footer"
    android:layout_width="@dimen/dimen_img_width"
    android:layout_height="@dimen/dimen_img_height"
    android:layout_marginLeft="@dimen/dimen_padding_text"
    android:layout_marginRight="@dimen/dimen_padding_text">

    <RelativeLayout
        android:layout_width="@dimen/dimen_img_width"
        android:layout_height="@dimen/dimen_img_width"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="@dimen/dimen_img_width_height"
            android:layout_height="@dimen/dimen_img_width_height"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:padding="1dp"
            android:src="@drawable/ic_add_img" />
    </RelativeLayout>


</RelativeLayout>